<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/chooseLanguagesLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/buttonChooseLanguage">

    </FrameLayout>

    <Button
            android:id="@+id/buttonChooseLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
        android:text="@string/choose_your_language" />

    <TextView
        android:id="@+id/textViewLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/chooseLanguagesLayout"
        android:layout_toEndOf="@+id/buttonChooseLanguage"
        android:layout_toRightOf="@+id/buttonChooseLanguage" />

</RelativeLayout>