<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/history_element"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageViewFav"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/textViewDestinationLanguage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:drawable/btn_star_big_off" />

    <TextView
        android:id="@+id/textViewSourceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textViewDestinationText"
        android:layout_alignStart="@+id/textViewDestinationText" />

    <TextView
        android:id="@+id/textViewDestinationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_below="@+id/textViewSourceText"
        android:layout_toRightOf="@+id/textViewDestinationLanguage"
        android:layout_toEndOf="@+id/textViewDestinationLanguage" />

    <TextView
        android:id="@+id/textViewFromLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageViewFav"
        android:text="ru"
        android:layout_alignRight="@+id/textViewDestinationLanguage"
        android:layout_alignEnd="@+id/textViewDestinationLanguage" />

    <TextView
        android:id="@+id/textViewDestinationLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewSourceText"
        android:layout_toEndOf="@+id/imageViewFav"
        android:layout_toRightOf="@+id/imageViewFav"
        android:text="en" />

</RelativeLayout>